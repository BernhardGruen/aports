# Contributor:
# Maintainer:
pkgname=lizardfs
pkgver=3.12.0
pkgrel=0
pkgdesc="LizardFS is a highly reliable, scalable and efficient distributed file system. It spreads data over a number of physical servers, making it visible to an end user as a single file system."
url="https://lizardfs.org"
arch="all"
license="GPL-3.0-or-later"
depends=""
makedepends="cmake"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/lizardfs/lizardfs/archive/v3.12.0.zip"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$builddir"
	mkdir -p build
	cd build
	cmake ..\
		-DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

sha512sums="48c0bd8db0b6afc378ecad4eedf6bc407b35d847365bbaf8d732bce8eaae9399befe4364482b240b142414fa4953e008280e910fb51ebbd12bbb3a62a567dd44  v3.12.0.zip"
